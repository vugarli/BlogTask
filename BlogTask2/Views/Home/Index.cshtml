<section id="portfolio" class="portfolio">
    <div class="container">

        <div id="js-grid-masonry-projects" class="cbp cbp-l-grid-masonry-projects">
            @foreach(var item in Model.Blogs)
            {
                
            <div class="cbp-item">
                <div class="cbp-caption">
                    <div class="cbp-caption-defaultWrap">
                        <img src="~/blogimages/@item.CoverImageUrl" alt="">
                    </div>
                    <div class="cbp-caption-activeWrap">
                        <div class="cbp-l-caption-alignCenter">
                            <div class="cbp-l-caption-body">
                                <a href="~/blog/blogs.html" class="btn blog-btn cbp-singlePage cbp-l-caption-buttonLeft">READ MORE</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="portfolio-text">
                    <p class="portfolio-vert text-grey">by @item.Author</p>
                    <a class="text-black" href="~/blog/blogs.html"><h2 class="heading ml-3">@item.Title</h2></a>
                    <p class="date text-grey">@item.DateString</p>

                    <div class="horizontal-line"></div>
                    <p class="sub-heading text-grey mt-3">@item.Description
                </div>
            </div>
            }


        </div>
    </div>
</section>

